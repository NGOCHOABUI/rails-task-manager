<h1>My Task List</h1>
<% @tasks.each do |task| %>
  <% if task.completed %>
    <input type="checkbox" checked>
  <% else %>
    <input type="checkbox">
  <% end %>
  <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
  <br>
<% end %>
<%= link_to "Add new Task", tasks_new_path %>

